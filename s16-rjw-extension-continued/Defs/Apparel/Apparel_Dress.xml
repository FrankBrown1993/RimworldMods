<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="S16_ServantGirlDress" ParentName="S16_Base">
    <defName>S16_ServantGirlDress</defName>
    <label>servant girl dress</label>
    <description>Revealing dress usually seen on low rank sex-slaves.</description>
    <graphicData>
      <texPath>Things/Apparel/Dress/ServantA/S16Dress1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>All</tradeability>
	<costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>                                                   
      <WorkToMake>10000</WorkToMake>
      <Mass>0.5</Mass>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <thingCategories>
      <li>S16_Dress</li>
    </thingCategories>
    <equippedStatOffsets>
      <SexSatisfaction>0.2</SexSatisfaction>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
		<li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Dress/ServantA/S16Dress1</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
	    <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>S16_Dress</li>
		<li>S16_Tier1</li>
      </tags>
	  <gender>Female</gender>
    </apparel>
	<comps>	
		<li Class="s16_extension.CompProperties_HediffApparel">
			<hediffDef>S16DressIHed</hediffDef>
			<partsToAffect>
					<li>Torso</li>
			</partsToAffect>
		</li>
    <li>
    <compClass>CompColorable</compClass>
    </li>
    </comps>
	<recipeMaker>
	<researchPrerequisites>
      <li>S16_Apparel</li>
    </researchPrerequisites>
    </recipeMaker>
  </ThingDef>
  
