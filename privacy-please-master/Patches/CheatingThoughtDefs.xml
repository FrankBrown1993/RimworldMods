		<operations>
	
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/ThoughtDef[defName="CheatedOnMe"][not(nullifyingPrecepts)]</xpath>
				<value>
					<nullifyingPrecepts />
